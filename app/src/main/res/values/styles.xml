<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="drawerArrowStyle">@style/DrawerIcon</item>
        <item name="android:listDivider">@android:color/transparent</item>
    </style>

    <style name="AppThemeLogin" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/yellow</item>
        <item name="colorPrimaryDark">@color/yellow</item>
        <item name="colorAccent">@color/blue</item>
    </style>

    <style name="AppThemeCam" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@android:color/transparent</item>
        <item name="colorPrimaryDark">@android:color/transparent</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">false</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="TextStyle" parent="android:Widget.TextView">
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="TextStyleToolbar" parent="android:Widget.TextView">
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/yellow</item>
    </style>

    <style name="DrawerIcon" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="color">@color/yellow</item>
    </style>

    <style name="toastStyleSuccess">
        <item name="colorBackground">@color/green</item>
        <item name="textColor">@color/white</item>
        <item name="length">LONG</item>
        <item name="cornerRadius">50dp</item>
        <item name="iconRight">@drawable/ic_check_black_24dp</item>
        <item name="iconTint">@color/white</item>
    </style>

    <style name="toastStyleDanger">
        <item name="colorBackground">@color/red</item>
        <item name="textColor">@color/white</item>
        <item name="length">LONG</item>
        <item name="cornerRadius">50dp</item>
        <item name="iconRight">@drawable/ic_sentiment_very_dissatisfied_black_24dp</item>
        <item name="iconTint">@color/white</item>
    </style>

    <style name="toastStyleWarning">
        <item name="colorBackground">@color/orange</item>
        <item name="textColor">@color/white</item>
        <item name="length">LONG</item>
        <item name="cornerRadius">50dp</item>
        <item name="iconRight">@drawable/ic_error_outline_black_24dp</item>
        <item name="iconTint">@color/white</item>
    </style>

    <style name="toastStyleDefault">
        <item name="colorBackground">@color/green</item>
        <item name="textColor">@color/white</item>
        <item name="length">LONG</item>
        <item name="cornerRadius">50dp</item>
        <item name="iconRight">@drawable/ic_sentiment_dissatisfied_black_24dp</item>
        <item name="iconTint">@color/white</item>
    </style>

    <style name="TextViewStyleToolbar" parent="android:Widget.TextView">
        <item name="android:textSize">17sp</item>
        <item name="android:gravity">left</item>
        <item name="android:textColor">@color/blue</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="AppTheme.popUpOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>
